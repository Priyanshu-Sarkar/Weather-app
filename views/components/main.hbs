<div class="container main-header">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <main class="main-content d-flex mt-5 pt-5">
                <form action="" class="form btn-group">
                    <input type="text" name="cityName" id="cityName" placeholder="Enter your city name"
                        autocomplete="off" class="form-control fs-3 d-inline">
                    <input type="submit" value='Search' id='submitBtn' class="btn btn-warning fs-3">
                </form>
                <div class="temp-info">
                    <div class="top-layer">
                        <p id="date" class="fs-4"> </p>
                    </div>
                    <div class="main-layer">
                        <p id="city_name" class="fs-2">Get Output here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp" class="fs-1"></p>
                            <p id="temp_status"></p>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>
</div>
<script src="js/script.js"></script>